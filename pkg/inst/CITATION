if(!exists("meta") || is.null(meta)) meta <- packageDescription("cocorresp")

citHeader("To cite package 'cocorresp' in publications use:")

citEntry(entry="Manual",
	title ="cocorresp: Co-correspondence analysis ordination methods",
	author = personList(as.person("G. L. Simpson")),
	year = 2005,
	note = paste("R package version", meta$Version),
	textVersion =
	paste("Simpson, G.L. (2005). ", 
	"cocorresp: Co-correspondence analysis ordination methods",
	meta$Version, 
 	".", sep="")
)
 
